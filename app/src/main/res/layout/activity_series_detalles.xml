<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.Series.SeriesDetalles">

    <TextView
        android:id="@+id/txtTituloSerieDetalle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="TÃ­tulo"
        android:textSize="30sp"
        android:textStyle="bold"></TextView>

    <ImageView
        android:id="@+id/imgSerieDetalle"
        android:layout_width="200dp"
        android:layout_height="250dp"
        android:layout_gravity="center"
        android:paddingTop="10dp"
        android:src="@mipmap/ic_launcher_round"></ImageView>

    <TextView
        android:id="@+id/director_detalle_serie"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Director"
        android:textSize="15sp"
        android:textStyle="italic"
        android:layout_marginTop="10dp"></TextView>

    <TextView
        android:id="@+id/reparto_detalle_serie"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Reparto"
        android:textSize="15sp"
        android:textStyle="italic"
        android:layout_marginTop="20dp"></TextView>

    <TextView
        android:id="@+id/sinopsi_detalle_serie"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Sinopsi"
        android:textSize="15sp"
        android:textStyle="italic"
        android:layout_marginTop="20dp"></TextView>
    <TextView
        android:id="@+id/temporadas_detalle_serie"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Temporadas"
        android:textSize="15sp"
        android:textStyle="italic"
        android:layout_marginTop="20dp"></TextView>

    <ImageView
    android:id="@+id/imgSerieClasificacion"
    android:layout_width="200dp"
    android:layout_height="50dp"
    android:layout_gravity="center"
    android:layout_marginTop="20dp"></ImageView>


</LinearLayout>
